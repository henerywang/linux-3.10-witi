+	.valid		= suspend_valid_only_mem,
+	.begin		= malta_pm_begin,
+	.enter		= malta_pm_enter,
+	.end		= malta_pm_end,
+};
+
+/*
+ * Initialize suspend interface
+ */
+static int __init malta_pm_init(void)
+{
+	suspend_set_ops(&malta_pm_ops);
+
+	return 0;
+}
+
+late_initcall(malta_pm_init);
